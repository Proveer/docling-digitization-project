# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite (recommended for development and small-scale deployments)
DATABASE_URL=sqlite:///./docling.db

# PostgreSQL (for production with high concurrency)
# DATABASE_URL=postgresql://user:password@localhost:5432/docling_db

# MySQL (alternative production database)
# DATABASE_URL=mysql+pymysql://user:password@localhost:3306/docling_db

# =============================================================================
# GEMINI AI CONFIGURATION
# =============================================================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================
# Host address (0.0.0.0 allows external connections, 127.0.0.1 for local only)
API_HOST=0.0.0.0

# Port number for the API server
API_PORT=8000

# Number of worker processes (for production deployment)
API_WORKERS=4

# Enable auto-reload on code changes (set to false in production)
API_RELOAD=true

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================
# Directory for uploaded files
UPLOAD_DIR=uploads

# Directory for processed output files (JSON, images, tables)
OUTPUT_DIR=output

# Maximum file size for uploads (in megabytes)
MAX_FILE_SIZE_MB=100

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins for cross-origin requests
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
